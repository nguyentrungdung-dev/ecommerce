<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="stylesheets/style.css" />

    <title>Website Title</title>
  </head>
  <body>
    <main>
      <form action="/toy/add" method="post">
        <h1>Add New Toy</h1>

        <label for="name">Toy Name:</label>
        <input type="text" name="name" id="name" required />

        <label for="image">Toy Image (URL):</label>
        <input type="url" name="image" id="image" required />

        <label for="price">Toy Price:</label>
        <input type="text" name="price" id="price" required />

        <label for="category">Toy Category:</label>
        <select name="category" id="category">
          {{#each categories}}
            <option value="{{_id}}">{{name}}</option>
          {{/each}}
        </select>

        <input type="submit" value="Add" />
      </form>
    </main>
  </body>
</html>