  </div>
</nav>

  <main>
    <div class="container">
      <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
        {{#each toys}}
          <div class="col">
            <div class="p-3 border bg-light">
              <img src="{{ image }}" alt="" width="220" height="220" />
              <p style="text-align: center;" > {{ name }} </p> 
              <p style="text-align: center;" > {{ price }} </p>
              <p style="text-align: center;" > {{ category.name }} </p>
              <a href="/toy/edit/{{ _id }}"><button>Edit</button></a>
              <a href="/toy/delete/{{ _id }}" onclick="return confirm('Are you sure to delete???');"><button>Delete</button></a>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </main>


</body>
</html>
